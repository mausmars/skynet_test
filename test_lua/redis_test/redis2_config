-- 必须配置，skynet 启动的第一个服务以及其启动参数
bootstrap = "snlua bootstrap"

-- 必须配置，工作线程数，不要多余 cpu 核数
thread = 5

-- skynet_error的输出文件，默认为nil表示标准输出
logger = "logs/redis2.log"

-- 当你运行时为一个服务打开 log 时，这个服务所有的输入消息都会被记录在这个目录下，文件名为服务地址
logpath = "logs"

-- 0表示单节点模式，1-255 间的任意整数表示多节点模式
harbor = 0

-- 必须配置，用 C 编写的服务模块的位置
cpath = "skynet/cservice/?.so"
lua_cpath = "skynet/luaclib/?.so"

-- lua 脚本所在的位置
lua_path = "skynet/lualib/?.lua;skynet/3rd/lua-snapshot/?.lua;tool/redis_test/?.lua"
luaservice = "skynet/service/?.lua;tool/redis_test/?.lua"

lualoader = "skynet/lualib/loader.lua"

--daemon = "./redis2_test.pid"
-- 启动脚本，必须在luaservice指定的路径中，默认为 main.lua
start = "redis2"

redis_host = "127.0.0.1"
redis_auth = "xxx@redis"
redis_port = 10001
